{# Home page template - converted from Vue Home.vue #}
{% extends '_layout/base.twig' %}

{% block content %}
<div class="home-page">
    {# Hero Section - from Vue HeroSection component #}
    <section class="hero" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url('/images/new/heros/hero3.webp')">
        <div class="container">
            <div class="hero-content">
                <div class="text-content">
                    <h1>Experience True <span>Beauty</span> &amp; <span>Elegance</span></h1>
                    <p>At The Leading Edge, we blend artistry with expertise to create looks that enhance your natural beauty.</p>
                </div>
                
                <div class="hero-buttons">
                    <a href="/services" class="btn btn-secondary">Explore Services</a>
                    <a href="/contact" class="btn btn-secondary">Book Appointment</a>
                    <a href="/offers" class="btn btn-primary">Offers & Gift Vouchers</a>
                </div>
            </div>
        </div>
    </section>

    {# Features Section - from Vue FeaturesSection component #}
    <section class="section features">
        <div class="container">
            <h2 class="text-center">Why Choose Us</h2>
            <div class="features-grid">
                <div class="feature">
                    <i class="fas fa-crown"></i>
                    <h3>Premium Experience</h3>
                    <p>Luxurious environment and personalized service that exceeds expectations.</p>
                </div>
                <div class="feature">
                    <i class="fas fa-certificate"></i>
                    <h3>Expert Stylists</h3>
                    <p>Our team of highly trained professionals stay ahead of the latest trends and techniques.</p>
                </div>
                <div class="feature">
                    <i class="fas fa-leaf"></i>
                    <h3>Quality Products</h3>
                    <p>We use only premium, sustainable products that are gentle on your hair and the environment.</p>
                </div>
            </div>
        </div>
    </section>

    {# Services Preview Section - from Vue ServicesPreviewSection component #}
    <section class="section services-preview">
        <div class="container">
            <h2 class="text-center">Our Services</h2>
            <p class="text-center">Discover our range of premium hair and beauty services</p>
            <div class="services-grid">
                <div class="service">
                    <img src="/images/new/services/service1.webp" alt="Styling, Cutting & Colouring">
                    <h3>Styling, Cutting & Colouring</h3>
                    <p>Expert cutting, styling and coloring services to create the perfect look tailored to your unique style.</p>
                    <a href="/services" class="btn btn-primary">Learn More</a>
                </div>
                <div class="service">
                    <img src="/images/new/services/service2.webp" alt="Nail & Beauty Services">
                    <h3>Nail & Beauty Services</h3>
                    <p>Complete nail care, facial treatments, and beauty services to enhance your natural features.</p>
                    <a href="/services" class="btn btn-primary">Learn More</a>
                </div>
                <div class="service">
                    <img src="/images/new/services/service3.webp" alt="Massage & Aesthetic Treatments">
                    <h3>Massage & Aesthetic Treatments</h3>
                    <p>Relaxing massage therapy and advanced aesthetic treatments for total body wellness and beauty.</p>
                    <a href="/services" class="btn btn-primary">Learn More</a>
                </div>
            </div>
            <div class="services-cta">
                <a href="/services" class="btn btn-primary">View All Services</a>
            </div>
        </div>
    </section>

    {# Testimonials Section - from Vue TestimonialsSection component #}
    <section class="section testimonials">
        <div class="container">
            <h2 class="text-center">What Our Clients Say</h2>
            <div class="testimonials-slider">
                <div class="testimonial-container">
                    <div class="testimonial-wrapper active" data-testimonial="0">
                        <div class="testimonial">
                            <blockquote>
                                <p>"The Leading Edge has completely transformed my hair care routine. The team is professional, knowledgeable, and always makes me feel welcome."</p>
                                <footer>
                                    <img src="/images/new/testimonials/test001.webp" alt="Sarah Johnson">
                                    <cite>
                                        <strong>Sarah Johnson</strong>
                                        <span>Regular Client</span>
                                    </cite>
                                </footer>
                            </blockquote>
                        </div>
                    </div>
                    <div class="testimonial-wrapper" data-testimonial="1">
                        <div class="testimonial">
                            <blockquote>
                                <p>"Absolutely love the results every time I visit. The stylists here are true artists and always keep up with the latest trends and techniques."</p>
                                <footer>
                                    <img src="/images/new/testimonials/test002.webp" alt="Michael Thompson">
                                    <cite>
                                        <strong>Michael Thompson</strong>
                                        <span>Loyal Customer</span>
                                    </cite>
                                </footer>
                            </blockquote>
                        </div>
                    </div>
                    <div class="testimonial-wrapper" data-testimonial="2">
                        <div class="testimonial">
                            <blockquote>
                                <p>"Their attention to detail is incredible. I came in with a vague idea of what I wanted and left with exactly the style I didn't even know I needed!"</p>
                                <footer>
                                    <img src="/images/new/testimonials/test003.webp" alt="Emma Wilson">
                                    <cite>
                                        <strong>Emma Wilson</strong>
                                        <span>First-time Client</span>
                                    </cite>
                                </footer>
                            </blockquote>
                        </div>
                    </div>
                </div>
                
                <div class="testimonial-controls">
                    <div class="testimonial-arrows">
                        <button class="arrow prev" onclick="previousTestimonial()">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <button class="arrow next" onclick="nextTestimonial()">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Products Showcase - from Vue ProductsShowcase component #}
    <section class="section products-section">
        <div class="container">
            <h2 class="text-center">Premium Products</h2>
            <p class="text-center">We partner with the industry's finest brands to bring you exceptional quality</p>
            <div class="brands-container">
                <div class="brand brand-position-0">
                    <img src="/images/new/products/prod1.webp" alt="Premium Brand Product 1">
                </div>
                <div class="brand brand-position-1">
                    <img src="/images/new/products/prod2.webp" alt="Premium Brand Product 2">
                </div>
                <div class="brand brand-position-2">
                    <img src="/images/new/products/prod3.webp" alt="Premium Brand Product 3">
                </div>
                <div class="brand brand-position-3">
                    <img src="/images/new/products/prod4.webp" alt="Premium Brand Product 4">
                </div>
            </div>
            <div class="products-cta">
                <a href="#" class="btn btn-primary shop-btn">
                    <i class="fas fa-shopping-cart"></i>
                    View our Online Shop
                </a>
            </div>
        </div>
    </section>

    {# Instagram Feed - from Vue InstagramFeed component #}
    <section class="section instagram">
        <div class="container">
            <h2 class="text-center">Follow Our Journey</h2>
            <p class="text-center">Stay updated with our latest styles and salon updates</p>
            <div class="instagram-grid">
                <div class="instagram-image">
                    <img src="/images/new/insta/insta1.webp" alt="Instagram Post 1">
                </div>
                <div class="instagram-image">
                    <img src="/images/new/insta/insta2.webp" alt="Instagram Post 2">
                </div>
                <div class="instagram-image">
                    <img src="/images/new/insta/insta3.webp" alt="Instagram Post 3">
                </div>
                <div class="instagram-image">
                    <img src="/images/new/insta/insta4.webp" alt="Instagram Post 4">
                </div>
                <div class="instagram-image">
                    <img src="/images/new/insta/insta5.webp" alt="Instagram Post 5">
                </div>
                <div class="instagram-image">
                    <img src="/images/new/insta/insta6.webp" alt="Instagram Post 6">
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="https://instagram.com" class="btn btn-primary">Follow Us @TheLeadingEdge</a>
            </div>
        </div>
    </section>

    {# Call to Action - from Vue CallToAction component #}
    <section class="section cta" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/new/internal/int1.webp')">
        <div class="container">
            <div class="cta-content text-center">
                <h2>Ready for a Transformation?</h2>
                <p>Book your appointment today and experience the difference at The Leading Edge.</p>
                <a href="/contact" class="btn btn-primary">Book Now</a>
            </div>
        </div>
    </section>
</div>
{% endblock %}
