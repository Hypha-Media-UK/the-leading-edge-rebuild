{# Page Header Component Macro #}
{% macro pageHeader(title, description = '', extraContent = '') %}
    <section class="page-header">
        <div class="container">
            <h1>{{ title }}</h1>
            <div class="separator"></div>
            {% if description %}
                <p>{{ description }}</p>
            {% endif %}
            
            {% if extraContent %}
                {{ extraContent|raw }}
            {% endif %}
        </div>
    </section>
{% endmacro %}
