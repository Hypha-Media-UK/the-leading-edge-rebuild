{# Button Component Macro #}
{% macro button(text, variant = 'primary', href = null, icon = null, class = '') %}
    {% set tag = href ? 'a' : 'button' %}
    {% set classes = ['btn', variant, class]|join(' ') %}
    
    <{{ tag }}{% if href %} href="{{ href }}"{% endif %} class="{{ classes }}">
        {% if icon %}<i class="{{ icon }} btn-icon"></i>{% endif %}
        {{ text }}
    </{{ tag }}>
{% endmacro %}
