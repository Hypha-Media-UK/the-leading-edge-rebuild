{# Testimonials Section Component #}
{% macro testimonials(title, testimonials = [], description = '') %}
    <section class="testimonials">
        <div class="container">
            <div class="section-header">
                <h2>{{ title }}</h2>
                {% if description %}
                    <p>{{ description }}</p>
                {% endif %}
            </div>
            
            <div class="testimonials-slider">
                <div class="testimonial-container">
                    {% for testimonial in testimonials %}
                        <div class="testimonial-wrapper" data-testimonial-index="{{ loop.index0 }}" {% if loop.first %}style="opacity: 1;"{% else %}style="opacity: 0;"{% endif %}>
                            <div class="testimonial">
                                <div class="quote">"</div>
                                <p>{{ testimonial.quote }}</p>
                                <div class="client">
                                    <div class="client-image">
                                        <img src="/images/new/testimonials/{{ testimonial.image }}" alt="{{ testimonial.name }} - {{ testimonial.role }}">
                                    </div>
                                    <div class="client-info">
                                        <h4>{{ testimonial.name }}</h4>
                                        <span>{{ testimonial.role }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                <div class="testimonial-controls">
                    <div class="testimonial-arrows">
                        <button class="arrow prev" aria-label="Previous testimonial">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <button class="arrow next" aria-label="Next testimonial">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endmacro %}
