{# Benefits Section Component Macro #}
{% macro benefitsSection(title, description, benefits) %}
    <section class="why-join-section">
        <div class="container">
            {% if title or description %}
                <div class="section-header">
                    {% if title %}
                        <h2>{{ title }}</h2>
                    {% endif %}
                    {% if description %}
                        <p>{{ description }}</p>
                    {% endif %}
                </div>
            {% endif %}
            
            <div class="benefits-grid">
                {% for benefit in benefits %}
                    <div class="benefit-item">
                        <div class="icon">
                            <i class="{{ benefit.icon }}"></i>
                        </div>
                        <h3>{{ benefit.title }}</h3>
                        <p>{{ benefit.description }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endmacro %}
